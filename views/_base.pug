doctype html
html( lang= "en" )
  head
    meta( charset= "UTF-8" )
    meta( name= "viewport", content= "width=device-width, initial-scale=1.0" )
    meta( name= "theme-color", content= "#0a0a0a" )
    link( rel= "icon", href= "/images/favicon.ico", sizes= "256x256", type= "image/x-icon" )
    link( rel= "icon", href= "/images/favicon.svg", sizes= "any", type= "image/svg+xml" )
    title= ( title || 'Frame' ) + ' — Video Library'

    block scripts
      script( src= "/js/global.min.js", type= "text/javascript" ) 

    block styles
      link( rel= "stylesheet", href= "/css/global.min.css" )
      link( rel= "stylesheet", href= "/css/layout.min.css" )

  body#top

    header#header.header( role= "banner", aria-label= "Header" )
      div.header-inner
        div.header-left
          a.header-logo( href= "/", title= "Frame — Video Library" )
            img( src= "/images/favicon.svg", alt= "Logo" )
        div.header-center
          form( action= "/search", method= "get", autocomplete= "off", spell-check= "off" ).header-search
            img.icon( src= "/images/icons/search.svg", alt= "Search" )
            input( type= "text", name= "q", value= query || '', placeholder= "Search …" )
        div.header-right
          a.header-nav-opener( href= "#nav", title= "Menu" )
            img.icon( src= "/images/icons/menu.svg", alt= "Menu" )

    main#main.main( role= "main", aria-role= "Content" )
      block main

    footer#footer.footer( role= "contentinfo", aria-role= "Footer" )
      p.footer-credits &copy; Copyright 2025 by komed3. All rights reserved.
      div.legal-links
        a( href= "https://github.com/komed3/frame", target= "_blank" ) GitHub
        a( href= "https://github.com/komed3/frame/issues", target= "_blank" ) Bug Report
        a( href= "https://komed3.de" target= "_blank" ) komed3
