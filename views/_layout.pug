doctype html
html( lang= lang )
  head
    meta( charset= "UTF-8" )
    meta( name= "viewport", content= "width=device-width, initial-scale=1.0" )
    title= title + ' â€” ' + t( 'generic.slogan' )

  //- Body
  body#top.frame

    //- Header
    header#header.frame-header( role= "banner", aria-label= "Header" )
      div.frame-header--inner
        a.frame-header--logo( href= "/", title= t( 'generic.slogan' ), aria-label= "Logo" )
          span= t( 'generic.title' )
        nav.frame-header--nav( role= "navigation", aria-label= "Menu" )
          a( href= "/" )= t( 'header.nav.home' )
          a( href= "/list" )= t( 'header.nav.list' )
          a( href= "/new" )= t( 'header.nav.new' )
        form.frame-header--search( action= "/search", method= "get", role= "search", aria-label= "Search" )
          i.icon.icon-search
          input( type= "text", name= "q", placeholder= t( 'header.search.placeholder' ) )
        div.frame-header--dasher
          button.frame-header--dasher-opener( title= t( 'header.dasher.label' ) )
            i.icon.icon-dasher

    main#main.frame-main( role= "main", aria-label= "Content" )
      block content
