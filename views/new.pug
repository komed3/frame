extends ./_layout

append styles
  link( rel= "stylesheet", href= "/css/upload-form.min.css" )

block content
  form.frame-upload(
    enctype= "multipart/form-data", autocomplete= "off", spell-check= "on",
    aria-label= "Video Upload"
  )

    //- Left column
    div.frame-upload--column

      //- Video meta
      div.frame-upload--box
        h3= t( 'views.new.form.meta' )
        div.frame-upload--form-group
          label( for= "title" )= t( 'views.new.form.title' )
          input#title(
            type= "text", name= "title", required,
            placeholder= t( 'views.new.form.titlePlaceholder' )
          )
        div.frame-upload--form-row
          div.frame-upload--form-group
            label( for= "author" )= t( 'views.new.form.author' )
            input#author(
              type= "text", name= "author", required,
              placeholder= t( 'views.new.form.authorPlaceholder' )
            )
          div.frame-upload--form-group
            label( for= "source" )= t( 'views.new.form.source' )
            input#source(
              type= "text", name= "source",
              placeholder= t( 'views.new.form.sourcePlaceholder' )
            )
        div.frame-upload--form-row
          div.frame-upload--form-group
            label( for= "date" )= t( 'views.new.form.date' )
            input#date( type= "date", name= "date" )
          div.frame-upload--form-group
            label( for= "lang" )= t( 'views.new.form.lang' )
            select#lang( name= "lang" )
              option( disabled, selected )= t( 'views.new.form.langPlaceholder' )
              each l in [ 'en', 'de', 'es', 'fr', 'it', 'ru' ]
                option( value= l )= t( 'lang.' + l )
        div.frame-upload--form-group
          label( for= "description" )= t( 'views.new.form.description' )
          textarea#description(
            name= "description", rows= 5,
            placeholder= t( 'views.new.form.descriptionPlaceholder' )
          )

      //- Special
      div.frame-upload--box
        h3= t( 'views.new.form.special' )
        div.frame-upload--form-row
          div.frame-upload--form-group
            label( for= "category" )= t( 'views.new.form.category' )
            select#category( name= "category", required )
              option( disabled, selected )= t( 'views.new.form.categoryPlaceholder' )
              each c in [ 'education', 'entertainment', 'music', 'sports', 'technology', 'other' ]
                option( value= c )= t( 'category.' + c )
          div.frame-upload--form-group
            label( for= "pg" )= t( 'views.new.form.pg' )
            select#pg( name= "pg", required )
              option( disabled, selected )= t( 'views.new.form.pgPlaceholder' )
              each p in [ 'G', 'PG', 'PG-13', 'R', 'NC-17' ]
                option( value= p )= p
        div.frame-upload--form-group
          label( for= "tags" )= t( 'views.new.form.tags' )
          input#tags(
            type= "text", name= "tags",
            placeholder= t( 'views.new.form.tagsPlaceholder' )
          )

    //- Right column
    div.frame-upload--column

      //- Video file
      div.frame-upload--file
        div.frame-upload--file-drop
          input( type= "file", name= "video", accept= "video/*", required )
          i.icon.icon-upload
          strong= t( 'views.new.form.file.drop' )
          span= t( 'views.new.form.file.supported' )
        div.frame-upload--file-preview.hidden
          video.preview-player
          button.change-file= t( 'views.new.form.file.change' )

      //- Video file info
      div.frame-upload--box
        ul.frame-upload--file-info
          li
            span= t( 'views.new.form.file.info.name' )
            strong.file-name —
          li
            span= t( 'views.new.form.file.info.size' )
            strong.file-size —
          li
            span= t( 'views.new.form.file.info.type' )
            strong.file-type —
          li
            span= t( 'views.new.form.file.info.duration' )
            strong.file-duration —
          li
            span= t( 'views.new.form.file.info.resolution' )
            strong.file-resolution —

      //- Form actions
      div.frame-upload--actions
        button.submit( type= "submit" )= t( 'views.new.form.submit' )
        button( type= "reset" )= t( 'views.new.form.reset' )
